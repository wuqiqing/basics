<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="register" extends="struts-default" namespace="/register">
        <action name="userAction_*" class="cn.itcast.day19_struts2_day02.action.xml.validation.UserAction" method="{1}">
            <result name="register_ok">/login.jsp</result>
            <result name="login_ok">/index.jsp</result>
            <result name="register_error">/register.jsp</result>
            <result name="login_error">/login.jsp</result>
        </action>
    </package>
</struts>






